/* Smaller text for mobile */
@media screen and (max-width 550px)
  html
    font-size 100% !important
.lead
  font-size 1.2rem
.small
  font-size 0.8em
#app strong
  font-weight 500
#app h5
  font-weight 500
  letter-spacing 0.5px
  text-transform uppercase
#app .primary-color
  color var(--primary-color)
p
  letter-spacing -0.15px
  &:last-child
    margin-bottom 0
li
  letter-spacing -0.15px
.uppercase
  text-transform uppercase
h1, h2, h3
  small
    font-weight normal
    margin 0 1rem
    opacity 0.8
// utils -------------------------
