.container
  max-width 1300px
  position relative
  width 100%
  &, &-md, &-full, &-base, &-sm, &-mini
    margin-left auto
    margin-right auto
    padding 0 var(--space)
    width 100%
  &-md
    max-width 760px
  &-base
    max-width 680px
  &-sm
    max-width 630px
  &-mini
    max-width 460px
  &--push
    margin-left -15px
    margin-right -15px
  &--framed
    background-color #FFF
    box-shadow 1px 1px 15px rgba(0, 0, 0, 0.1)
    padding var(--space-x2)
@media screen and (max-width 850px)
  .container .container
    padding-left 0
    padding-right 0
.container-main
  flex-direction column
  flex-wrap nowrap
  @media screen and (min-width 850px)
    flex-direction row
.flex
  align-items center
  display flex
  flex-wrap wrap
  > *:last-child
    margin-left 0
    margin-right 0
  > li
    list-style none
    margin-left 0
    padding 0
  &--center
    justify-content center
  &--align-equal
    align-items stretch
    > *
      align-self stretch
  &--no-wrap
    flex-wrap no-wrap
  &--space-between
    justify-content space-between
ul.flex
  margin 0
.gap
  &-15
    > *
      margin-right 15px
  &-20
    > *
      margin-right 20px
  &-30
    > *
      margin-right 30px
  &-60
    > *
      margin-right 60px
.flex-fit
  flex 1
.flex-space-between
  justify-content space-between
.flex-align-top
  align-items flex-start
.grid-cols
  display grid
  grid-gap var(--space)
  grid-template-columns repeat(auto-fit, minmax(26%, 1fr))
  &--collapse
    grid-gap 0
    > div:first-child
      border-bottom-right-radius 0
      border-right 0
      border-top-right-radius 0
    > div:last-child
      border-bottom-left-radius 0
      border-left-width 0
      border-top-left-radius 0
  &--gap-small
    grid-gap var(--space)
  &--gap-large
    grid-gap var(--space-x2)
  &--2
    grid-template-columns repeat(auto-fit, minmax(36%, 1fr))
  &--4
    grid-template-columns repeat(auto-fit, minmax(20%, 1fr))
  &--5
    grid-template-columns repeat(auto-fit, minmax(10%, 1fr))
@media screen and (max-width 850px)
  .grid-cols
    grid-template-columns repeat(2, 1fr)
  .grid-cols--full-md
    grid-template-columns repeat(1, 1fr)
@media screen and (max-width 550px)
  .grid-cols
    grid-template-columns repeat(1, 1fr)
// base--------------------
html, body
  background-color var(--bg)
  touch-action manipulation
  transition background-color 0.3s
  width 100%
#app
  color var(--body-color)
*, *:before, *:after
  box-sizing inherit
body *:target
  animation target 2s
@keyframes target
  0
    opacity 0
  100%
    opacity 1
img, svg
  max-width 100%
  vertical-align middle
hr
  background-color var(--border-color) !important
::selection
  background var(--select-color)
// button---------------------------
.button
  align-items center
  background-color transparent
  border 0
  border-radius 5px
  color var(--primary-color-dark)
  display inline-flex
  font-weight 500
  letter-spacing 0.5px
  overflow hidden
  padding 0.34rem 1.2rem
  position relative
  text-decoration none
  transition transform 0.2s, background 0.3s, box-shadow 0.3s, color 0.3s
  z-index 1
  > span
    z-index 2
  > svg + span
    margin-left 0.25rem
  &:hover
    box-shadow var(--glow)
    transform translateY(-1px)
  &:after
    border 1px solid currentColor
    border-radius 5px
    bottom 0
    box-shadow inset -1px -2px 0px 0px rgba(0, 0, 0, 0.05)
    content ' '
    left 0
    opacity 0.6
    position absolute
    right 0
    top 0
    transition opacity 0.3s, box-shadow 0.3s
  &:active:after
    box-shadow none
  &:hover:after
    opacity 1
  &.primary
    background-color var(--primary-color-dark)
    color #FFF
    &:after
      border-color rgba(0, 0, 0, 0.1)
    &:before
      background-color var(--primary-color)
      border-radius 50%
      bottom 100%
      content ''
      height 1em
      position absolute
      right 100%
      transform translate(50%, 50%) scale(0)
      transform-origin center
      transition transform 0.2s ease-in-out
      width 1em
      z-index -1
    &:focus:before, &:hover:before
      transform translate(50%, 50%) scale(20)
  &--small
    font-size 0.85rem
    padding 0.35rem 0.7rem
  &--xsmall
    font-size 0.7rem
    padding 0.3rem 0.7rem
  &--icon
    padding-left 0.6rem
    padding-right 0.6rem
  &--blank
    background-color transparent
    border-color transparent
    box-shadow none !important
    padding-left 0
    padding-right 0
    &:not(:hover)
      color currentColor
      opacity 0.6
    &:after
      display none
  &--large
    font-size 1.2rem
    padding 0.5rem 1.5rem
// nav -------------------------
nav a
  align-items center
  display flex
  flex-wrap wrap
  font-size 0.95rem
  font-weight 400
  justify-content center
  letter-spacing 0.5px
  padding 15px 5px
  position relative
  text-decoration none
  @media screen and (max-width 850px)
    &
      padding-left 2px
      padding-right 2px
  &:after
    background-color transparent
    content ''
    height 1px
    left 50%
    opacity 0.5
    position absolute
    top calc(100%)
    transform translateX(-50%)
    transition all 0.6s
    width 0px
  svg
    margin 2px 6px
  &:not(.active):not(:hover):not(.button)
    color currentColor
    opacity 0.85
  &:hover
    color var(--primary-color)
    &:after
      background-color var(--primary-color)
  &.active
    color var(--primary-color-dark)
    &:after
      background-color var(--primary-color-dark)
      width 100%
nav
  .has-dropdown
    display inline-block
    position relative
    &:hover
      .dropdown
        opacity 1
        pointer-events inherit
        transform translateY(0px)
        visibility visible
  .dropdown
    background-color #FFF
    border-radius 3px
    box-shadow 1px 1px 5px rgba(0, 0, 0, 0.3)
    color #111
    opacity 0
    pointer-events none
    position absolute
    right 0
    top 100%
    transform translateY(-5px)
    transition opacity 0.3s, transform 0.3s cubic-bezier(0.19, 1, 0.22, 1)
    visibility hidden
    width 200px
    z-index 10
    &__title
      display block
      font-size 12px
      font-weight bold
      letter-spacing 1px
      margin-top 10px
      opacity 0.3
      padding 5px
      text-transform uppercase
    a
      font-size 0.9rem
      justify-content flex-start
      padding 8px 15px
      &:hover
        background-color var(--bg-teritary)
