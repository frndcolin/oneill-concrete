  text-align center
.no-wrap
  display inline-block
  flex-wrap no-wrap
  white-space no-wrap
.mb
  margin-bottom var(--space) !important
.mb-x2
  margin-bottom var(--space-x2) !important
.pb
  padding-bottom var(--space) !important
.ml
  margin-left 10px !important
.show-for-small
  display none
